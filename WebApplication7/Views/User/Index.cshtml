@{
}
@model IEnumerable<User>

@{
    ViewBag.Title = "Users List";
}

<div class="container mt-4">
    <h2>Users List</h2>

    <p>
        <a href="@Url.Action("AddForm")" class="btn btn-primary">Add New User</a>
    </p>

    <div class="list-group">
        @foreach (var user in Model)
        {
            <a href="@Url.Action("Details", new { id = user.Id })" class="list-group-item list-group-item-action">
                <h5 class="mb-1">@user.Name</h5>
                <p class="mb-1">@user.Email</p>
                <small>Phone: @user.Phone</small>
                <div class="mt-2">
                    <a href="@Url.Action("EditForm", new { id = user.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</a>
                </div>
            </a>
        }
    </div>
</div>

