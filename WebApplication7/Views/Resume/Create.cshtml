@model WebApplication7.Models.Resume
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Resume</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #012f 0%, #012f 50%, #6a1b9a 100%);
            color: floralwhite;
            margin: 0;
            padding: 0;
        }

        /* Header Section */
        .header {
            position: relative;
            background: url('https://your-image-url.com/background.jpg') no-repeat center center/cover; /* Add your background image */
            color: white;
            padding: 100px 0;
            text-align: center;
        }

            .header::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.6); /* Dark overlay for readability */
            }

        .header-content {
            position: relative;
            z-index: 1;
        }

        .header h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .header p {
            font-size: 1.25rem;
        }

        /* Main Section */
        .section {
            padding: 60px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Card Styling for Form Sections */
        .card {
            background-color: white;
            border: none;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-10px);
            }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: #6a1b9a;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 1rem;
                color: white;
            }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
        }

        /* Button Styling */
        .btn-custom {
            background: linear-gradient(45deg, #012f, #6a1b9a);
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 20px;
        }

            .btn-custom:hover {
                background: linear-gradient(45deg, #6a1b9a, #012f);
            }

        /* Footer */
        /* footer {
            background-color: #333;
            color: white;
            padding: 30px 0;
            text-align: center;
            margin-top: 30px;
        } */

    </style>
</head>
<body>

    <!-- Header Section -->
    <div class="header">
        <div class="header-content">
            <h1>Create Your Resume</h1>
            <p>Fill in the form to create a professional resume.</p>
        </div>
    </div>


<h2>Create Resume</h2>

<form asp-action="Create" method="post">
   
        @if (Context.Session.GetInt32("UserId") != null)
        {
            <div class="user-info">
                <p><strong>Name:</strong> @Context.Session.GetString("UserName")</p>
                <p><strong>Email:</strong> @Context.Session.GetString("Email")</p>
            </div>
        }
    <div class="form-group">
        <label for="Summary">Summary</label>
        <textarea class="form-control" id="Summary" name="Summary" rows="4" required>@Model.Summary</textarea>
    </div>

    <div class="form-group">
        <label for="Skills">Skills</label>
        <textarea class="form-control" id="Skills" name="Skills" rows="3">@Model.Skills</textarea>
    </div>

    <!-- Experiences Section -->
    <h3>Experiences</h3>
    <div id="experiences">
        <div class="experience-template mb-4">
            <h4>New Experience</h4>
            <div class="form-group">
                <label for="Experiences[0].JobTitle">Job Title</label>
                <input class="form-control" id="Experiences[0].JobTitle" name="Experiences[0].JobTitle" type="text" required />
            </div>
            <div class="form-group">
                <label for="Experiences[0].CompanyName">Company Name</label>
                <input class="form-control" id="Experiences[0].CompanyName" name="Experiences[0].CompanyName" type="text" required />
            </div>
            <!-- Add other fields for StartDate, EndDate, Responsibilities, etc. -->
        </div>
    </div>
    <button type="button" class="btn btn-secondary" id="addExperience">Add Another Experience</button>

    <!-- Education Section -->
    <h3>Education</h3>
    <div id="educations">
        <div class="education-template mb-4">
            <h4>New Education</h4>
            <div class="form-group">
                <label for="Educations[0].SchoolName">School Name</label>
                <input class="form-control" id="Educations[0].SchoolName" name="Educations[0].SchoolName" type="text" required />
            </div>
            <div class="form-group">
                <label for="Educations[0].FieldOfStudy">Field of Study</label>
                <input class="form-control" id="Educations[0].FieldOfStudy" name="Educations[0].FieldOfStudy" type="text" required />
            </div>
            <div class="form-group">
                <label for="Educations[0].GraduationYear">Graduation Year</label>
                <input class="form-control" id="Educations[0].GraduationYear" name="Educations[0].GraduationYear" type="number" required />
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-secondary" id="addEducation">Add Another Education</button>

    <!-- Projects Section -->
    <h3>Projects</h3>
    <div id="projects">
        <div class="project-template mb-4">
            <h4>New Project</h4>
            <div class="form-group">
                <label for="Projects[0].ProjectTitle">Project Title</label>
                <input class="form-control" id="Projects[0].ProjectTitle" name="Projects[0].ProjectTitle" type="text" required />
            </div>
            <div class="form-group">
                <label for="Projects[0].Description">Description</label>
                <textarea class="form-control" id="Projects[0].Description" name="Projects[0].Description" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label for="Projects[0].TechnologiesUsed">Technologies Used</label>
                <input class="form-control" id="Projects[0].TechnologiesUsed" name="Projects[0].TechnologiesUsed" type="text" required />
            </div>
        </div>
    </div>
        <button type="submit" class="btn btn-secondary"> Create Resume </button>
   
    <button type="button" class="btn btn-secondary" id="addProject">Add Another Project</button>
   
</form>

@section Scripts {
    <!-- JavaScript to dynamically add more experiences, educations, and projects -->
    <script>
        document.getElementById('addExperience').addEventListener('click', function () {
            var newExperience = document.querySelector('.experience-template').cloneNode(true);
            document.getElementById('experiences').appendChild(newExperience);
        });

        document.getElementById('addEducation').addEventListener('click', function () {
            var newEducation = document.querySelector('.education-template').cloneNode(true);
            document.getElementById('educations').appendChild(newEducation);
        });

        document.getElementById('addProject').addEventListener('click', function () {
            var newProject = document.querySelector('.project-template').cloneNode(true);
            document.getElementById('projects').appendChild(newProject);
        });
    </script>
}
</body>
</html>